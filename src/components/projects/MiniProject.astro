---
import ContinueReading from "./ProjectContinueReading.astro";

const { project, Content } = Astro.props;
---

<article>
  <div class="flex">
    <div class="image_container">
      <a class="image__link" href={`/projects/${project.frontmatter.slug}`}
        ><img class="project__image" src={project.frontmatter.image} alt="" />
      </a>
    </div>

    <div class="project-content">
      <h2>
        <a href={`/projects/${project.frontmatter.slug}`}
          >{project.frontmatter.title}</a
        >
      </h2>

      <ul class="project__links">
        {
          project.frontmatter.homepage && (
            <li>
              <img src="/icons/www.svg" alt="" class="project__icon" />
              <a href={project.frontmatter.homepage}>Homepage</a>
            </li>
          )
        }

        {
          project.frontmatter.repository && (
            <li>
              <img src="/icons/github.svg" alt="" class="project__icon" />
              <a href={project.frontmatter.repository}>Repository</a>
            </li>
          )
        }
      </ul>
      {project.frontmatter.excerpt}
    </div>
    <div class="footer">
      <ContinueReading link={`/projects/${project.frontmatter.slug}`} />
    </div>
  </div>
</article>

<style>
  article {
    background-color: var(--color-black-lighter);
    /* background-color: var(--color-black-mid); */
    border-radius: 0.3rem;
    /* background-image: var(--svg-tri-bg); */
  }

  h2 {
    /* padding-bottom: 1rem; */
    border-bottom: 0;
  }

  div.flex {
    /* outline: 1px solid gold; */
    height: 100%;
    display: flex;
    gap: 1rem;
    flex-direction: column;
    justify-content: flex-start;
  }

  div.flex > * {
    /* outline: 1px solid green; */
  }

  div.footer {
    margin-top: auto;
  }

  article:hover {
    /* box-shadow: 0.3rem 0.3rem var(--color-primary); */
  }
  article:hover .project__image {
  }

  .image_container:hover .project__image {
    opacity: 0.5;
    filter: grayscale(100%);
    /* background-color: var(--color-primary); */
  }

  .image_container:hover {
    background-image: var(--svg-tri-bg);
    background-color: var(--color-primary);
    border-radius: 0.3rem 0.3rem 0 0;
  }

  .project-content {
    padding: 0rem 1rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  h2 > a {
    color: var(--color-headings);
  }

  h2 > a:hover {
    color: var(--color-headings);
    text-decoration: underline;
    text-decoration-color: var(--color-primary);
  }
  .project__links {
    padding-left: 0;
    list-style-type: none;
  }
  .project__links li {
    padding-left: 0px;
  }

  .project__links .project__icon {
    fill: var(--color-secondary);
    margin-right: 10px;
    padding: 1px;
    stroke: var(--color-secondary);
    vertical-align: middle;
    width: 1.5rem;
  }

  .project__image {
    gap: 0;
    display: block;
    border-radius: 0.3rem 0.3rem 0 0;
    background-size: cover;

    /* filter: grayscale(70%); */
    width: 100%;
  }

  .image__link {
    line-height: 0;
  }
</style>

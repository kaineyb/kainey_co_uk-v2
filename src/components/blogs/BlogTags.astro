---
import Button from "../Button.astro";

const { tags } = Astro.props;

// console.log(tags);
---

<section class="tags-section">
  <h2>Tags:</h2>
  <ul>
    {
      tags.map((tag: string) => (
        <li>
          <Button link={`/blog/tag/${tag.toLowerCase()}`} label={tag} />
        </li>
      ))
    }
  </ul>
</section>

<style>
  .tags-section {
    border-radius: 0.3rem;
    background-image: var(--svg-tri-bg);
    background-color: var(--color-black);
    border: 1px solid var(--color-black-lighter);
    padding: 1rem;
    margin: 2rem auto;
  }

  .tags-section h2 {
    padding-bottom: 0.5rem;
    line-height: 1rem;
    /* font-weight: 100; */
    margin-top: 0;
    margin-bottom: 0;
    font-size: 100%;
    border-bottom: 1px solid var(--color-secondary);
  }

  .tags-section ul {
    /* outline: 1px green solid; */
    margin: 1rem 0 0 0;
    display: flex;
    gap: 1rem 0.5rem;
    padding-left: 0;
  }

  .tags-section li,
  .tags-section a {
    display: block;
    word-wrap: none;
  }
</style>

---
const { tags } = Astro.props;
---

<section class="tags">
  <h2>Tagged under:</h2>
  <ul>
    {
      tags.map((tag) => (
        <li>
          <a href={`/blog/tag/${tag.toLowerCase()}`}>{tag}</a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .tags {
    border-radius: 0.5rem 0.5rem 0 0;
    /* border: 3px solid var(--color-body-lighter); */
    background-image: var(--svg-tri-bg);
    border-bottom: 0.2rem solid var(--color-secondary);
    /* box-shadow: 0.3rem 0.3rem var(--color-body-lighter); */
    color: var(--color-primary);
    display: flex;
    flex-wrap: wrap;
    font-weight: bold;
    gap: 0rem 0.5rem;
    list-style: none;
    margin: 1rem 0;
    padding: 0;
  }

  .tag-list {
    padding-left: 0;
    list-style: none;
  }

  .tag-list h4 {
    margin-bottom: 1rem;
  }
  .tags li,
  .tags a {
    display: inline-block;
    word-wrap: none;
  }

  .tags ul {
    display: flex;
    gap: 1rem 0.5rem;
    padding-left: 0;
  }

  .tags h2 {
    background-color: var(--color-body-lighter);
    background-image: var(--svg-tri-bg);
    border-radius: 0.3rem 0;
    margin-bottom: 0;
    color: var(--color-headings);
    font-family: var(--font-body);
    font-style: italic;
    font-weight: bold;
    font-size: 100%;
    height: 100%;
    line-height: 1rem;
    padding: 0.5rem;
  }
  .tags a {
    background-image: var(--svg-tri-bg);
    border-radius: 0.5rem;
    border: 0.15rem solid var(--color-secondary);
    box-shadow: 0.15rem 0.15rem var(--color-secondary);
    color: var(--color-primary);
    padding: 0.3rem;
  }

  .tags a:hover {
    background-color: var(--color-highlight);
    color: var(--color--whitepoint);
    font-weight: bold;
    text-decoration: none;
  }
</style>

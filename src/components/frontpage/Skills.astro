---
import "animate.css";
const data = [
  {
    name: "Main Languages",
    data: [
      "Python",
      "JavaScript",
      "Typescript",
      "HTML & CSS",
      "SQL",
      "...dabble in a few more",
      // "C",
      // "PHP",
    ],
  },
  { name: "Frameworks", data: ["Django", "Flask", "React", "Astro"] },
  { name: "OS", data: ["Windows", "OSX", "Linux"] },

  { name: "Other Tools", data: ["Git", "GitHub/GitLab", "Docker", "VSCode"] },
];
---

<section class="skills">
  <h2>Skills</h2>
  <section class="skills-container">
    {
      data.map((thing, index) => (
        <>
          <section class="skill">
            <h4>{thing.name}</h4>
            {thing.data.map((item) => (
              <li>{item}</li>
            ))}
          </section>
        </>
      ))
    }
  </section>
</section>

<style>
  .skills {
    margin: 5rem 0rem;
  }

  hr {
    height: auto;

    margin: 0px;

    /* Set all to 0px */
    border: 0px inset var(--color-primary);

    /* If horizontal */
    border-top-width: 1px;

    /* if vertical */
    border-left-width: 1px;
  }

  .skills-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 1rem;
  }

  .skill {
    background-image: var(--svg-tri-bg);
    background-color: var(--color-black-mid);
    border-radius: 0.5rem 0;
    /* background-color: var(--color-black-lighter); */
    flex: 1 1 100%;
    padding: 2rem;
  }

  /* Tablets and Greater */
  @media screen and (min-width: 576px) {
    .skills-container {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .skill {
      flex: 1 1 30%;
    }
  }

  /* Latops and Desktop */
  @media screen and (min-width: 1440px) {
    .skill {
      flex: 1 1 20%;
    }
  }
</style>

---
import Footer from "../components/footer/Footer.astro";
import Header from "../components/header/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/fav/favicon.ico" />
    <link rel="stylesheet" href="/css/styles.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Kainey.co.uk</title>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body><script>
    document.querySelector(".hamburger")?.addEventListener("click", () => {
      document.querySelector(".nav-links")?.classList.toggle("expanded");
    });
  </script>
</html>

<style>
  main {
    /* padding: var(--padding-main); */
    padding: 0 var(--padding-main) 0 var(--padding-main);
    margin: 2rem 2rem;
  }

  @media screen and (min-width: 576px) {
    main {
      /* outline: 1px solid orange; */
      gap: 0 2.5rem;
      /* Taking 17px for the scroll bar */
      width: var(--min-tablet-width-sb);
      margin: 0 3rem;
    }
  }

  @media screen and (min-width: 992px) {
    main {
      /* outline: 1px solid red; */
      /* Taking 17px for the scroll bar */
      width: var(--min-laptop-width-sb);
      margin: 0 3rem;
    }
  }

  @media screen and (min-width: 1440px) {
    main {
      /* outline: 1px solid violet; */

      /* Taking 17px for the scroll bar */
      width: var(--min-desktop-width-sb);
      margin: 0 auto;
    }
  }
</style>

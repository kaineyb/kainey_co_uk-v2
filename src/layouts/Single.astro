---
import Layout from "../layouts/Base.astro";

const { frontmatter, title } = Astro.props;
---

<Layout title={title || frontmatter.title}>
  <section class="single">
    <slot />
  </section>
</Layout>

<style>
  /* Section Single */

  section.single {
    background-color: var(--color-black-mid);
    margin: 0 auto;
    padding: 5rem 1rem;
  }

  @media screen and (min-width: 576px) {
    section.single {
      padding: 5rem 2rem;
    }
  }

  /* For Desktops  */
  @media screen and (min-width: 992px) {
    section.single {
      padding: 5rem 5rem;
      /* Only limit the width beyond this */
      /* 30 - 50em  */
      width: 50em;
    }
  }
</style>
